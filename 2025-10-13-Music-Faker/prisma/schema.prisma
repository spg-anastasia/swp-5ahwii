datasource db {
  provider = "sqlite"
  url=env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-ts"
  output = "client"
  runtime = "deno"
}

model Song{ 
id String @id @default(cuid())
name String
album Album @relation(name:"SongAlbum", fields: [albumId], references: [id])
albumId String //bei 1:n beziehung kann man Fremdschl√ºssel in der n-Tabelle speichern
artists Artist[] @relation(name:"SongArtists")
duration Int
genre Genre @relation(fields: [genreId], references: [id])
genreId String
}

model Artist{
id String @id @default(cuid())  
name String
alben Album[] @relation("AlbumArtists")
songs Song[] @relation("SongArtists")
}

model Album{
id String @id @default(cuid())
name String
erscheinungsjahr Int
artists Artist[] @relation("AlbumArtists")
songs Song[] @relation("SongAlbum")
}

model Genre{
id String @id @default(cuid())
name String
songs Song[]
}



